{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "allowJs": true,
    "checkJs": true,
    "declarationMap": true
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules"]
}